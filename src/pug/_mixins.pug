//  svg icons

mixin icon(name,mod)
	-mod = mod || ""
	svg(aria-hidden="true" class="icon " + name + '' + mod)
		use(xlink:href="images/sprite.svg#"+ name)
// lists

mixin list(className, items,  activeItem)
	ul(class=className + '__list')
		each item, ndx in items
			li(class=className + '__item ' + ( (ndx === activeItem ) ? className + '__item--active' : '') )
				a(href=item.link)(class=className + '__link')= item.name


